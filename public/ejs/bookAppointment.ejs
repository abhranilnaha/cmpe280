
<div class="container-fluid" style="margin-top: 80px">
    <div class="col-sm-4"></div>
    <div class="col-sm-4" style="border-color: aliceblue;border-style: solid;border-width: 2px;border-radius: 15px 50px;padding: 10px">
        <div class="navbar" style="height: 20px;background-color: #2b3643;color: aliceblue;font-size: larger;padding: 10px"><center><b style="">BOOK AN APPOINTMENT</b></center></div>
        <form>
            <div class="form-group">
                <label for="name" style="color: aliceblue;">Name</label>
                <input type="text" class="form-control" id="name" placeholder="Enter Full Name" ng-model="name">
            </div>
            <div class="form-group">
                <label for="birthDate" style="color: aliceblue;">Date Of Birth</label>
                <input type="date" class="form-control" id="birthDate" placeholder="Select your Date of Birth" ng-model="dob">
            </div>
            <div class="form-group">
                <label for="gender" style="color: aliceblue;">Gender</label>
                <select class="form-control" name="gender" id="gender" ng-model="gender" tabindex="0">
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
            </div>
            <div class="form-group">
                <label for="service" style="color: aliceblue;">Service</label>
                <select class="form-control" name="service" id="service" ng-model="service" tabindex="0">
                    <option value="Dental Care">Dental Care</option>
                    <option value="Aging Solution">Aging Solutions</option>
                    <option value="Eye Care">Eye Care</option>
                    <option value="Physiotherapy">Physiotherapy</option>
                </select>
            </div>
            <div class="form-group">
                <label for="appointmentDate" style="color: aliceblue;">Appointment Date</label>
                <input type="datetime-local" class="form-control" id="appointmentDate" placeholder="Appointment Date" ng-model="appointmentDate">
            </div>
            <div class="form-group">
                <label for="email" style="color: aliceblue;">Email</label>
                <input type="email" class="form-control" id="email" placeholder="Email" ng-model="email">
            </div>
            <div class="form-group">
                <label for="phone" style="color: aliceblue;">Phone Number</label>
                <input type="phone" class="form-control" id="phone" placeholder="Phone" ng-model="phone">
            </div>
            <div class="form-group">
                <label for="serviceDesc" style="color: aliceblue;">Service Description</label>
                <textarea rows="4" cols="50" class="form-control" id="serviceDesc" placeholder="Service Description" ng-model="serviceDesc">
                </textarea>
            </div>

            <center><button type="submit" class="btn btn-primary" style="background-color: #2b3643;border-color: aliceblue;width: 150px" ng-click="bookAppointment()">Book Appointment</button></center>
        </form>
    </div>
</div>
